
---
import { HeaderIds } from "../enum/header-ids"
---

<header
  id = "landing-header"
  class="py-4 px-10 sm:flex sm:flex-row block items-center fixed top-0 w-full  z-40 text-current   duration-500 "
>

<div class="flex flex-grow  " >
  <div class="flex flex-grow justify-start text-4xl" >
    <p  class="cursor-default" id="logo"><a href="#startScreen" >Blind</a></p>
  </div>

  <div class="inline sm:hidden ">
    <button id='boton' class="flex items-center px-3 py-2  rounded ">
      <svg class="fill-current h-6 w-6" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><title>Menu</title><path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"/></svg>
    </button>
  </div>
</div>

    <nav class="hidden  sm:block  sm:py-0" id="menu">
      <div class=" sm:bg-transparent w-full ">
          <ul class="flex flex-col sm:flex-row items-center text-xl [&>li>a]:inline-block [&>li>a]:px-6 [&>li>a]:py-2 basis-2/3 ">
              <li><a  href="#noticias" id={HeaderIds.NEWS} >Noticias</a></li>
              <li><a href="#estrenos" id={HeaderIds.PREMIERE}>Estrenos</a></li>
              <li><a  href="#musica" id={HeaderIds.MUSIC}>Musica</a></li>
              <li><a  href="#contacto" id={HeaderIds.CONTACT}>Contacto</a></li>
            </ul>
  
      </div>
    </nav>


</header>

<script>
import { HeaderIds } from "../enum/header-ids";


  var backgroundColor : string;


document.addEventListener("DOMContentLoaded", function() {
    const links = document.querySelectorAll("#menu a");
    links.forEach(link => {
      link.addEventListener("click", function(event) {
        event.preventDefault();
        menu.classList.add("hidden");
        headerElement.style.backgroundColor = 'transparent';

        scrollToSection(this.getAttribute("href"));


      });
    });

   
    logo.addEventListener("click", function(event) {
      event.preventDefault();
      menu.classList.add("hidden");
      headerElement.style.backgroundColor = 'transparent';

      scrollToSection(this.getAttribute("href"));

    });

  });

function scrollToSection(sectionId: string) {
    const section = document.querySelector(sectionId);
    if (section) {
      section.scrollIntoView({ behavior: "smooth" });
    }
  }

  const headerElement = document.querySelector("#landing-header") as HTMLElement;

  const buttonElement = document.querySelector("#boton") as HTMLElement;

  const menu = document.querySelector("#menu") as HTMLElement;
  
  const logo = document.querySelector("#logo a");


  
  const newsOption = document.querySelector(`#${HeaderIds.NEWS}`) as HTMLElement;

  const musicOption = document.querySelector(`#${HeaderIds.MUSIC}`) as HTMLElement;

  const premiereOption = document.querySelector(`#${HeaderIds.PREMIERE}`) as HTMLElement;

  const contactOption = document.querySelector(`#${HeaderIds.CONTACT}`) as HTMLElement;

  const optionElement = {
   
    [HeaderIds.NEWS]: newsOption,
    [HeaderIds.MUSIC]: musicOption,
    [HeaderIds.PREMIERE]: premiereOption,
    [HeaderIds.CONTACT]: contactOption
  }


  const observerOptions = {
    root: null,
    rootMargin: "0px",
    threshold: 0.9,
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      
      if (entry.isIntersecting) {
        const color = entry.target.getAttribute("data-header-color");
        headerElement.style.color = color;
        backgroundColor = entry.target.getAttribute("data-header-background");
        
        menu.classList.add("hidden");
        headerElement.style.backgroundColor = 'transparent';


        const name = entry.target.getAttribute("data-name-section");


        selectNavigationOption(optionElement[name]);

        // giveBackgroundColor(name);

        
        

  

         
      }
    });
  }, observerOptions);


  const sections = document.querySelectorAll(".landing-section");
  sections.forEach((section) => {
    observer.observe(section);
  });

    buttonElement.addEventListener("click", () => {
        menu.classList.toggle("hidden");
        menu.classList.toggle("flex");
        menu.classList.toggle("flex-toggle");
        menu.classList.toggle("justify-end");
        elegirColor();
        

    });

    function elegirColor(){
      headerElement.style.backgroundColor == backgroundColor ? 
      headerElement.style.backgroundColor = "transparent" : headerElement.style.backgroundColor = backgroundColor;
      console.log(headerElement.style.backgroundColor);
    }

    function giveBackgroundColor(name: string){

      if(name == HeaderIds.NEWS){
        headerElement.classList.add("sm:bg-white","rounded-lg", "xl:bg-transparent");
        logo.classList.add("bg-white","rounded-lg", "px-2", "xl:bg-transparent", "xl:px-0");
        buttonElement.classList.add("bg-white","rounded-lg", "xl:bg-transparent");     
      } else {
        menu.classList.remove("sm:bg-white","rounded-lg");
        logo.classList.remove("bg-white","rounded-lg", "px-2");
      }
      
     
    }

    function selectNavigationOption(option: HTMLElement){
      const options = [newsOption, musicOption, premiereOption, contactOption];

      options.forEach(opt => {
        
        if(opt == option){
          opt.classList.add("underline");
        }else{
          opt.classList.remove("underline");
        }
      });
    }

  
 
</script>
