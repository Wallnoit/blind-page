    <div class="w-screen h-screen overflow-hidden rounded-lg   ">
         <!-- Item 1 -->
        <div class="duration-1000 ease-in-out  flex flex-col items-center justify-center" data-carousel-item="active">
            
               <CardNoticia title="Concierto 10 de mayo" description="El concierto se dará a cabo el dia 10 de mayo a las 9 de la noche patrocinado por bl abla ba" image={localImage} ></CardNoticia>
            
        </div>
        <!-- Item 2 -->
        <div class=" duration-700 ease-in-out  flex flex-col items-center justify-center" data-carousel-item>
            
                <!-- <CardNoticia></CardNoticia> -->
