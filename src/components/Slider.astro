        <button type="button" class="w-3 h-3 rounded-full bg-gray-200 hover:bg-gray-400" aria-current="false" aria-label="Slide 5" data-carousel-slide-to="4"></button>
    </div>


    <button type="button" class="absolute mx-1 top-0 start-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none" data-carousel-prev>
        <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/70  group-hover:bg-gray-100  group-focus:ring-4 group-focus:ring-black dark:group-focus:ring-gray-800/70 group-focus:outline-none">
