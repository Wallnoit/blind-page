---
import { HeaderIds } from "../enum/header-ids";
---

<section
  class="landing-section bg-black h-screen w-screen text-center relative overflow-hidden text-white"
  data-header-color="white"
  data-header-active="true"
  data-header-background="black"
  data-name-section={HeaderIds.START}
>
  <div class="z-30 relative h-full flex flex-col justify-center">
    <h2
      id="Name"
      class="text-9xl font-medium flex flex-row justify-center drop-shadow-xl shadow-white cursor-default"
    >
      Blind
    </h2>
  </div>

  <div
    class="absolute block lg:flex lg:flex-row top-0 bottom-0 h-full w-full z-10 brightness-50"
    |
  >
    <video
      class="object-cover basis-1 lg:basis-1/2 brightness-50 bg-black h-full w-full"
      autoplay
      muted
      loop
      src="/videoStart.webm"></video>

    <video
      class="hidden object-cover basis-1/2 brightness-50 lg:block h-full w-full bg-black"
      autoplay
      muted
      loop
      src="/videoStart.webm"></video>
  </div>
</section>

<script>
  const options = {
    root: null, // El valor nulo significa que el 치rea de observaci칩n es el viewport
    threshold: 0.5, // Define la cantidad de intersecci칩n necesaria para disparar la animaci칩n
  };

  const observer = new IntersectionObserver((entries, observer) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        entry.target.classList.add("animate-fade-up", "animate-duration-1000");
      } else {
        entry.target.classList.remove("animate-fade-up");
      }
    });
  }, options);

  const miComponente = document.getElementById("Name");
  const miComponente2 = document.getElementById("imagen");
  const miComponente3 = document.getElementById("blindNews");

  if (miComponente) {
    observer.observe(miComponente);
    observer.observe(miComponente2);
    observer.observe(miComponente3);
  }
</script>
